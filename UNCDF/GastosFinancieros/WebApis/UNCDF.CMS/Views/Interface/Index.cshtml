@model UNCDF.CMS.Models.SearchInterfaceViewModel

@{
    ViewBag.Title = "Interface register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ui-bar ui-bar-default">
    <span class="ui-title">
        Interface Maintenance
    </span>
    <div class="ui-btn-content">
        @Ajax.AjaxActionLink("New", "New", "Interface", null, new AjaxOptions
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "dialogBody",
                       OnBegin = "unitlife.site.dialog.onInit",
                       OnComplete = "unitlife.site.dialog.onComplete",
                       OnFailure = "unitlife.site.dialog.onFailure",
                   }, new { @class = "btn btn-default" }, "glyphicon glyphicon-file")
    </div>
</div>

<div class="collapse ui-error-view" id="panMessage">
</div>

<div class="ui-container ui-jumb">

    @using (Html.BeginForm("Search", "Interface", FormMethod.Post, new { id = "frmSearch" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.InterfaceName)
                    @Html.TextBoxFor(m => m.InterfaceName, new { @class = "form-control", maxlength = 255, id = "txtInterfaceName" })
                </div>

                <div class="col-md-2">
                    @Html.LabelFor(m => m.TypeId)
                    @Html.DropDownListFor(m => m.TypeId, (IEnumerable<SelectListItem>)ViewBag.Type, new { @class = "form-control", id = "txtTypeId" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(m => m.Status)


                    <div class="input-group">
                        @Html.DropDownListFor(m => m.Status, (IEnumerable<SelectListItem>)ViewBag.Estado, new { @class = "form-control", id = "txtStatus" })

                        <a id="btnSearch" class="btn btn-default input-group-addon">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search
                        </a>


                    </div>
                </div>

                <div class="col-md-1">
                    @*<a id="btnClean" class="btn btn-default" style="margin-top:22px;">
                        <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Clean
                    </a>*@

                </div>
            </div>

        </div>
        <div>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    }
</div>


<div class="ui-container">
    <div class="bars pull-left" style="font-weight: bold;margin-top: 15px;">
        <span class="title">
            Interface List
        </span>
        <span class="ui-grid-rows" data-info-grid="#tbList" data-info="@MessageResource.GridRowCountInfo"></span>
    </div>
    @*<table id="tbList">*@
    <table id="tbList" class="table table-hover"
           data-search="true"
           data-sort-name="@Html.HtmlIdNameFor(x => x.Result.TypeId)"
           data-toggle="table"
           data-toolbar=".toolbar"
           data-pagination="true"
           data-row-style="rowStyle">
        <thead>
            <tr>
                <th data-class="ui-cell-icon" data-formatter="objIndex.grid.commandEdit" data-events="objIndex.grid.rowCommand"></th>
                <th data-class="ui-cell-icon" data-formatter="unitlife.ui.grid.commands.control" data-events="objIndex.grid.rowCommand"></th>

                @*<th data-class="ui-cell-icon"  data-formatter="unitlife.ui.grid.commands.remove" data-events="objIndex.grid.rowCommand"></th>*@

                <th data-field="@Html.HtmlIdNameFor(x => x.Result.InterfaceId)" data-visible="false">@Html.DisplayNameFor(x => x.Result.InterfaceId)</th>
                <th class="col-md-1" data-field="@Html.HtmlIdNameFor(x => x.Result.Type)">@Html.DisplayNameFor(x => x.Result.Type)</th>
                <th class="col-md-2" data-field="@Html.HtmlIdNameFor(x => x.Result.InterfaceName)">@Html.DisplayNameFor(x => x.Result.InterfaceName)</th>
                <th class="col-md-6" data-field="@Html.HtmlIdNameFor(x => x.Result.Description)">@Html.DisplayNameFor(x => x.Result.Description)</th>
                <th data-field="@Html.HtmlIdNameFor(x => x.Result.StatusName)">@Html.DisplayNameFor(x => x.Result.StatusName)</th>
                <th data-visible="false" data-field="@Html.HtmlIdNameFor(x => x.Result.Status)">@Html.DisplayNameFor(x => x.Result.Status)</th>

            </tr>
        </thead>

    </table>


</div>


<script type="text/javascript" language="javacript">
     $("#btnClean").on("click", function (e) {
        e.preventDefault();
         $("#txtInterfaceName").val("");
         $("#txtStatus").val("1");
         $("#txtTypeId").val("2");

        $("#btnSearch").click();
    });
    function rowStyle(value, row, index) {
        var JsonVar = [value];
        var EstadoNombre = "";
        JsonVar.forEach(function (value) {
            EstadoNombre = value['Status'];
        });
        if (EstadoNombre == "0") {
            return { classes: 'danger' }
        }
        return { classes: '' }
    }


    function rebindGrid() {
        $("#btnSearch").click();
    }

    $('#dialogMain').on('hidden.bs.modal', function () {
        rebindGrid()
    });

    var objIndex={
        initial: function (){
            $("#btnSearch").on("click", function (e) {
                e.preventDefault();
                objIndex.grid.load();
            });

            unitlife.ui.grid('#tbList').create({ search: true, toolbar: ".ui-container .title, .ui-container .ui-grid-rows" });

            if ('@HttpContext.Current.Request.Params.Get("ret")' == "true")
            {
                objIndex.grid.load();
            }

        },
        grid:{
            get:function(){
                return unitlife.ui.grid("#tbList");
            },
            load:function(){
                unitlife.ui.grid('#tbList').load('@Url.Action("Search", "Interface", null)', '#frmSearch');
            },
            rowCommand:{
                'click #remove': function (e, value, row) {
                    e.preventDefault();
                    var Estado = row["Status"];

                    if (Estado == "1") {
                        var _grid = unitlife.ui.grid("#tbList");

                        Confirmar(
                            '¿@Html.Raw(string.Format(MessageResource.RowDeleteConfirm, "Interface"))?',
                        function () {
                            _grid.invoqCommand('@Url.Action("Delete", "Interface", null)', { id: row.InterfaceId }, function (e) {
                                if (e && e.isError == true)
                                    return;
                                objIndex.grid.load();
                            });
                        },
                        null
                            );
                    }else{
                        unitlife.ui.MessagePanel.show({ isError: true, message: "@Html.Raw(string.Format(MessageResource.RowInactivo,"Interface"))" });
                    }
                }, 'click #control': function (e, value, row) {
                    window.location.href = '@Url.Action("InterfaceControls", "Interface")/' + row.InterfaceId + '@Url.TargetParam()';
                    return false;
                }
            },
            commandEdit:function(e,r,i)
            {
                var sd = '@Ajax.AjaxActionLink("", "Edit", "Interface", null, new AjaxOptions
                {
                    HttpMethod = "GET",
                    InsertionMode = InsertionMode.Replace,
                    UpdateTargetId = "dialogBody",
                    OnBegin = "unitlife.site.dialog.onInit",
                    OnComplete = "unitlife.site.dialog.onComplete",
                    OnFailure = "unitlife.site.dialog.onFailure",
                    }, new { @class = "",title="Edit Interface" }, "glyphicon glyphicon-pencil")'

                sd = $(sd).attr("href", $(sd).attr("href") + "/" + r.@Html.HtmlIdNameFor(x => x.Result.InterfaceId))[0].outerHTML;
                return sd;
                objIndex.grid.load();
            }
        },
        general:{
        }
    };

    function ___getModalResult(key, data) {
        if (key == 'REG_INTERFACE'){
            objIndex.grid.load();
        }
    }

    $(document).ready(function () {
        objIndex.initial();
        rebindGrid();


        var $th = $('.tableFixHead').find('thead th')
        $('.tableFixHead').on('scroll', function () {
            $th.css('transform', 'translateY(' + this.scrollTop + 'px)');
        });

        $('.fixed-table-body').addClass('tableFixHead');

    });



    //$('#remove').style.color = '#FF00FF';

</script>
